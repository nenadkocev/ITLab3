@model Friends.Models.FriendModel
@{
    ViewBag.Title = "EditFriend";
}

<h2>EditFriend</h2>

@{ Html.BeginForm("FriendEdited", "Friend");}

@Html.LabelFor(m => m.Id) <br />
@Html.TextBoxFor(m => m.Id, Model.Id.ToString(), new {type = "number" })
