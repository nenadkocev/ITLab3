<br />
<br />

@Html.LabelFor(m => m.Name) <br />
@Html.TextBoxFor(m => m.Name, Model.Name)
@Html.ValidationMessageFor(m => m.Name)

<br />
<br />

@Html.LabelFor(m => m.MestoNaZiveenje) <br />
@Html.TextBoxFor(m => m.MestoNaZiveenje, Model.MestoNaZiveenje)
